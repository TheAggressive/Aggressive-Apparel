{
  "name": "aggressive-apparel/theme",
  "description": "Official WooCommerce Block Theme for Aggressive Apparel",
  "type": "wordpress-theme",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "The Aggressive Network, LLC",
      "homepage": "https://theaggressive.network"
    }
  ],
  "require": {
    "php": ">=8.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6",
    "yoast/phpunit-polyfills": "^2.0",
    "phpstan/phpstan": "^1.10",
    "phpstan/extension-installer": "^1.3",
    "szepeviktor/phpstan-wordpress": "^1.3",
    "php-stubs/woocommerce-stubs": "^8.0",
    "php-stubs/wordpress-stubs": "^6.4",
    "squizlabs/php_codesniffer": "^3.10",
    "wp-coding-standards/wpcs": "^3.1",
    "phpcompatibility/php-compatibility": "^9.3",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "Aggressive_Apparel\\": "includes/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Aggressive_Apparel\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test:coverage": "phpunit --coverage-html tests/coverage",
    "analyse": "phpstan analyse --memory-limit=2G",
    "analyse:baseline": "phpstan analyse --generate-baseline --memory-limit=2G",
    "phpcs": "phpcs",
    "phpcs:fix": "phpcbf",
    "phpcs:check": "phpcs --report=full --report-file=phpcs-report.txt",
    "lint:php": "composer phpcs",
    "lint:php:fix": "composer phpcs:fix"
  },
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "optimize-autoloader": true,
    "sort-packages": true
  }
}
