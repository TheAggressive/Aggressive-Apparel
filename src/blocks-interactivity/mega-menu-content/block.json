{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "aggressive-apparel/mega-menu-content",
  "version": "1.0.0",
  "title": "Mega Menu Content",
  "category": "aggressive-apparel",
  "description": "Rich content area for mega menus with flexible layouts.",
  "keywords": ["mega", "menu", "content", "columns"],
  "textdomain": "aggressive-apparel",
  "icon": "columns",
  "parent": ["aggressive-apparel/nav-submenu"],
  "attributes": {
    "layout": {
      "type": "string",
      "enum": ["columns", "grid", "flex"],
      "default": "columns"
    },
    "columns": {
      "type": "number",
      "default": 4
    },
    "gap": {
      "type": "string",
      "default": ""
    },
    "fullWidth": {
      "type": "boolean",
      "default": true
    }
  },
  "supports": {
    "html": false,
    "interactivity": true,
    "color": {
      "background": true,
      "text": true
    },
    "typography": {
      "fontSize": true,
      "letterSpacing": true
    },
    "spacing": {
      "padding": true,
      "blockGap": true
    },
    "__experimentalBorder": {
      "radius": true
    },
    "shadow": true,
    "className": true
  },
  "usesContext": [
    "aggressive-apparel/submenuId",
    "aggressive-apparel/menuType"
  ],
  "render": "file:./render.php",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css"
}
