{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "aggressive-apparel/navigation",
  "version": "2.0.0",
  "title": "Navigation",
  "category": "aggressive-apparel",
  "description": "Responsive navigation with built-in mobile panel, toggle, and sliding indicator.",
  "keywords": ["menu", "navigation", "header", "nav"],
  "textdomain": "aggressive-apparel",
  "icon": "menu",
  "attributes": {
    "breakpoint": {
      "type": "number",
      "default": 1024
    },
    "ariaLabel": {
      "type": "string",
      "default": "Main navigation"
    },
    "navId": {
      "type": "string",
      "default": ""
    },
    "openOn": {
      "type": "string",
      "enum": ["hover", "click"],
      "default": "hover"
    },
    "toggleLabel": {
      "type": "string",
      "default": "Menu"
    },
    "toggleIconStyle": {
      "type": "string",
      "enum": ["hamburger", "dots", "squeeze", "arrow", "collapse"],
      "default": "hamburger"
    },
    "toggleAnimationType": {
      "type": "string",
      "enum": [
        "to-x",
        "spin",
        "squeeze",
        "arrow-left",
        "arrow-right",
        "collapse",
        "none"
      ],
      "default": "to-x"
    },
    "showToggleLabel": {
      "type": "boolean",
      "default": false
    },
    "panelPosition": {
      "type": "string",
      "enum": ["left", "right"],
      "default": "right"
    },
    "panelAnimationStyle": {
      "type": "string",
      "enum": ["slide", "push", "reveal", "fade"],
      "default": "slide"
    },
    "panelWidth": {
      "type": "string",
      "default": "min(320px, 85vw)"
    },
    "showPanelOverlay": {
      "type": "boolean",
      "default": true
    },
    "mobileSyncMode": {
      "type": "string",
      "enum": ["auto", "custom"],
      "default": "auto"
    },
    "scrollBehavior": {
      "type": "string",
      "enum": ["none", "sticky", "hide-on-scroll", "transparent-to-opaque"],
      "default": "none"
    },
    "indicatorColor": {
      "type": "string"
    },
    "submenuBackgroundColor": {
      "type": "string"
    },
    "submenuTextColor": {
      "type": "string"
    },
    "submenuBorderRadius": {
      "type": "string",
      "default": ""
    },
    "submenuBorderWidth": {
      "type": "string",
      "default": ""
    },
    "submenuBorderColor": {
      "type": "string",
      "default": ""
    },
    "submenuBorderStyle": {
      "type": "string",
      "enum": ["solid", "dashed", "dotted", "none"],
      "default": "solid"
    },
    "panelBackgroundColor": {
      "type": "string"
    },
    "panelTextColor": {
      "type": "string"
    },
    "panelLinkHoverColor": {
      "type": "string"
    },
    "panelLinkHoverBg": {
      "type": "string"
    },
    "panelOverlayColor": {
      "type": "string"
    },
    "panelOverlayOpacity": {
      "type": "number",
      "default": 50
    }
  },
  "supports": {
    "html": false,
    "interactivity": true,
    "align": ["wide", "full"],
    "color": {
      "background": true,
      "text": true
    },
    "typography": {
      "fontSize": true,
      "lineHeight": true
    },
    "spacing": {
      "padding": true,
      "margin": true,
      "blockGap": true
    },
    "__experimentalBorder": {
      "radius": true,
      "width": true,
      "color": true,
      "style": true
    },
    "shadow": true,
    "layout": {
      "default": {
        "type": "flex",
        "flexWrap": "nowrap",
        "justifyContent": "space-between",
        "orientation": "horizontal"
      },
      "allowSwitching": true,
      "allowInheriting": false,
      "allowEditing": true,
      "allowJustification": true,
      "allowOrientation": false,
      "allowVerticalAlignment": true
    },
    "className": true
  },
  "providesContext": {
    "aggressive-apparel/navigationBreakpoint": "breakpoint",
    "aggressive-apparel/navigationOpenOn": "openOn",
    "aggressive-apparel/navigationId": "navId",
    "aggressive-apparel/submenuBackgroundColor": "submenuBackgroundColor",
    "aggressive-apparel/submenuTextColor": "submenuTextColor",
    "aggressive-apparel/submenuBorderRadius": "submenuBorderRadius",
    "aggressive-apparel/submenuBorderWidth": "submenuBorderWidth",
    "aggressive-apparel/submenuBorderColor": "submenuBorderColor",
    "aggressive-apparel/submenuBorderStyle": "submenuBorderStyle",
    "aggressive-apparel/panelBackgroundColor": "panelBackgroundColor",
    "aggressive-apparel/panelTextColor": "panelTextColor",
    "aggressive-apparel/panelLinkHoverColor": "panelLinkHoverColor",
    "aggressive-apparel/panelLinkHoverBg": "panelLinkHoverBg",
    "aggressive-apparel/panelOverlayColor": "panelOverlayColor",
    "aggressive-apparel/panelOverlayOpacity": "panelOverlayOpacity"
  },
  "viewScriptModule": "file:./view.js",
  "render": "file:./render.php",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css"
}
