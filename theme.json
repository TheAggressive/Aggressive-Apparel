{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "settings": {
    "appearanceTools": true,
    "useRootPaddingAwareAlignments": true,
    "layout": {
      "contentSize": "1200px",
      "wideSize": "1400px"
    },
    "spacing": {
      "units": ["px", "em", "rem", "vh", "vw", "%"],
      "spacingScale": {
        "steps": 0
      },
      "spacingSizes": [
        {
          "name": "X-Small",
          "size": "0.5rem",
          "slug": "x-small"
        },
        {
          "name": "Small",
          "size": "1rem",
          "slug": "small"
        },
        {
          "name": "Medium",
          "size": "2rem",
          "slug": "medium"
        },
        {
          "name": "Large",
          "size": "3rem",
          "slug": "large"
        },
        {
          "name": "X-Large",
          "size": "4rem",
          "slug": "x-large"
        }
      ]
    },
    "color": {
      "defaultPalette": false,
      "defaultGradients": false,
      "defaultDuotone": false,
      "palette": [
        {
          "name": "Base",
          "slug": "base",
          "color": "#ffffff"
        },
        {
          "name": "Base Dark",
          "slug": "base-dark",
          "color": "#1a1a1a"
        },
        {
          "name": "Contrast",
          "slug": "contrast",
          "color": "#000000"
        },
        {
          "name": "Contrast Dark",
          "slug": "contrast-dark",
          "color": "#ffffff"
        },
        {
          "name": "Primary",
          "slug": "primary",
          "color": "#1a1a1a"
        },
        {
          "name": "Primary Dark",
          "slug": "primary-dark",
          "color": "#f5f5f5"
        },
        {
          "name": "Secondary",
          "slug": "secondary",
          "color": "#666666"
        },
        {
          "name": "Secondary Dark",
          "slug": "secondary-dark",
          "color": "#a0a0a0"
        },
        {
          "name": "Accent",
          "slug": "accent",
          "color": "#ff4444"
        },
        {
          "name": "Accent Dark",
          "slug": "accent-dark",
          "color": "#ff6666"
        },
        {
          "name": "Accent Secondary",
          "slug": "accent-secondary",
          "color": "#00aaff"
        },
        {
          "name": "Accent Secondary Dark",
          "slug": "accent-secondary-dark",
          "color": "#33ccff"
        },
        {
          "name": "Background",
          "slug": "background",
          "color": "#f5f5f5"
        },
        {
          "name": "Background Dark",
          "slug": "background-dark",
          "color": "#0f0f0f"
        },
        {
          "name": "Border",
          "slug": "border",
          "color": "#e0e0e0"
        },
        {
          "name": "Border Dark",
          "slug": "border-dark",
          "color": "#333333"
        }
      ],
      "gradients": [
        {
          "name": "Primary to Secondary",
          "slug": "primary-secondary",
          "gradient": "linear-gradient(135deg, var(--wp--preset--color--primary) 0%, var(--wp--preset--color--secondary) 100%)"
        },
        {
          "name": "Primary to Secondary Dark",
          "slug": "primary-secondary-dark",
          "gradient": "linear-gradient(135deg, var(--wp--preset--color--primary-dark) 0%, var(--wp--preset--color--secondary-dark) 100%)"
        },
        {
          "name": "Accent to Accent Secondary",
          "slug": "accent-gradient",
          "gradient": "linear-gradient(135deg, var(--wp--preset--color--accent) 0%, var(--wp--preset--color--accent-secondary) 100%)"
        },
        {
          "name": "Accent to Accent Secondary Dark",
          "slug": "accent-gradient-dark",
          "gradient": "linear-gradient(135deg, var(--wp--preset--color--accent-dark) 0%, var(--wp--preset--color--accent-secondary-dark) 100%)"
        }
      ]
    },
    "typography": {
      "defaultFontSizes": false,
      "fluid": true,
      "fontFamilies": [
        {
          "name": "System Sans Serif",
          "slug": "system-sans-serif",
          "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif"
        },
        {
          "name": "System Serif",
          "slug": "system-serif",
          "fontFamily": "Georgia, 'Times New Roman', Times, serif"
        },
        {
          "name": "System Monospace",
          "slug": "system-monospace",
          "fontFamily": "'Courier New', Courier, monospace"
        }
      ],
      "fontSizes": [
        {
          "name": "Small",
          "slug": "small",
          "size": "0.875rem",
          "fluid": false
        },
        {
          "name": "Medium",
          "slug": "medium",
          "size": "1rem",
          "fluid": false
        },
        {
          "name": "Large",
          "slug": "large",
          "size": "1.25rem",
          "fluid": {
            "min": "1.125rem",
            "max": "1.25rem"
          }
        },
        {
          "name": "X-Large",
          "slug": "x-large",
          "size": "1.5rem",
          "fluid": {
            "min": "1.25rem",
            "max": "1.5rem"
          }
        },
        {
          "name": "XX-Large",
          "slug": "xx-large",
          "size": "2rem",
          "fluid": {
            "min": "1.5rem",
            "max": "2rem"
          }
        },
        {
          "name": "Huge",
          "slug": "huge",
          "size": "3rem",
          "fluid": {
            "min": "2rem",
            "max": "3rem"
          }
        }
      ],
      "fontWeight": true,
      "lineHeight": true,
      "textDecoration": true,
      "textTransform": true,
      "letterSpacing": true
    },
    "border": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true
    },
    "shadow": {
      "defaultPresets": false,
      "presets": [
        {
          "name": "Small",
          "slug": "small",
          "shadow": "0 1px 3px rgba(0, 0, 0, 0.12), 0 1px 2px rgba(0, 0, 0, 0.24)"
        },
        {
          "name": "Medium",
          "slug": "medium",
          "shadow": "0 3px 6px rgba(0, 0, 0, 0.15), 0 2px 4px rgba(0, 0, 0, 0.12)"
        },
        {
          "name": "Large",
          "slug": "large",
          "shadow": "0 10px 20px rgba(0, 0, 0, 0.15), 0 3px 6px rgba(0, 0, 0, 0.10)"
        },
        {
          "name": "X-Large",
          "slug": "x-large",
          "shadow": "0 15px 25px rgba(0, 0, 0, 0.15), 0 5px 10px rgba(0, 0, 0, 0.05)"
        }
      ]
    },
    "custom": {
      "woocommerce": {
        "productsPerPage": 12,
        "columnsPerRow": 3,
        "imageAspectRatio": "1:1"
      },
      "navigation": {
        "maxWidth": "1400px"
      }
    },
    "blocks": {
      "core/button": {
        "border": {
          "radius": false
        },
        "color": {
          "palette": []
        }
      },
      "core/heading": {
        "typography": {
          "fontWeight": true
        }
      },
      "core/paragraph": {
        "typography": {
          "lineHeight": true
        }
      },
      "core/post-title": {
        "typography": {
          "fontWeight": true
        }
      }
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--base)",
      "text": "var(--wp--preset--color--contrast)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--system-sans-serif)",
      "fontSize": "var(--wp--preset--font-size--medium)",
      "lineHeight": "1.6"
    },
    "spacing": {
      "padding": {
        "top": "0",
        "right": "var(--wp--preset--spacing--medium)",
        "bottom": "0",
        "left": "var(--wp--preset--spacing--medium)"
      },
      "blockGap": "var(--wp--preset--spacing--medium)"
    },
    "elements": {
      "link": {
        "color": {
          "text": "var(--wp--preset--color--primary)"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--accent)"
          }
        },
        ":focus": {
          "color": {
            "text": "var(--wp--preset--color--accent)"
          }
        }
      },
      "button": {
        "color": {
          "background": "var(--wp--preset--color--primary)",
          "text": "var(--wp--preset--color--base)"
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)",
          "fontWeight": "600",
          "textTransform": "uppercase",
          "letterSpacing": "0.05em"
        },
        "spacing": {
          "padding": {
            "top": "1rem",
            "right": "2rem",
            "bottom": "1rem",
            "left": "2rem"
          }
        },
        "border": {
          "radius": "0"
        },
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--accent)",
            "text": "var(--wp--preset--color--base)"
          }
        },
        ":focus": {
          "color": {
            "background": "var(--wp--preset--color--accent)",
            "text": "var(--wp--preset--color--base)"
          }
        },
        ":active": {
          "color": {
            "background": "var(--wp--preset--color--accent)",
            "text": "var(--wp--preset--color--base)"
          }
        }
      },
      "heading": {
        "color": {
          "text": "var(--wp--preset--color--primary)"
        },
        "typography": {
          "fontWeight": "700",
          "lineHeight": "1.2"
        }
      },
      "h1": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--huge)"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--xx-large)"
        }
      },
      "h3": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--x-large)"
        }
      },
      "h4": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--large)"
        }
      },
      "h5": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)"
        }
      },
      "h6": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--small)"
        }
      }
    },
    "blocks": {
      "core/site-title": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--x-large)",
          "fontWeight": "700",
          "textTransform": "uppercase"
        },
        "elements": {
          "link": {
            "color": {
              "text": "var(--wp--preset--color--primary)"
            },
            ":hover": {
              "color": {
                "text": "var(--wp--preset--color--accent)"
              }
            }
          }
        }
      },
      "core/navigation": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)",
          "fontWeight": "500",
          "textTransform": "uppercase",
          "letterSpacing": "0.05em"
        },
        "spacing": {
          "blockGap": "var(--wp--preset--spacing--medium)"
        }
      },
      "core/post-title": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--xx-large)",
          "fontWeight": "700"
        }
      },
      "core/post-content": {
        "spacing": {
          "blockGap": "var(--wp--preset--spacing--medium)"
        }
      },
      "core/group": {
        "spacing": {
          "blockGap": "var(--wp--preset--spacing--medium)"
        }
      },
      "core/columns": {
        "spacing": {
          "blockGap": "var(--wp--preset--spacing--medium)"
        }
      },
      "core/separator": {
        "color": {
          "background": "var(--wp--preset--color--border)"
        }
      }
    }
  },
  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer",
      "area": "footer"
    }
  ],
  "customTemplates": [
    {
      "name": "blank",
      "title": "Blank",
      "postTypes": ["page", "post"]
    },
    {
      "name": "page-no-title",
      "title": "Page (No Title)",
      "postTypes": ["page"]
    }
  ]
}
